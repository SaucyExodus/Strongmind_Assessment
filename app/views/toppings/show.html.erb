<% content_for :title, "#{@topping.name}" %>


<div class="card p-4 shadow-sm">
  <h2><%= @topping.name %></h2>
  
  <div class="mt-3">
    <%= link_to "Edit", edit_topping_path(@topping), class: "btn btn-warning" %>
    <%= link_to "Back", "javascript:window.history.back();", class: "btn btn-secondary" %>
    <%= button_to "Delete", @topping, 
      method: :delete, 
      data: { turbo_confirm: "Are you sure you want to delete this topping? \n(#{@topping.name})\n\nThis will also delete associated pizzas!" }, 
      class: "btn btn-danger",
      form: { style: "display: inline;" }
    %>
  </div>
</div>
