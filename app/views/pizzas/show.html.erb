<% content_for :title, "#{@pizza.name}" %>


<div class="card p-4 shadow-sm">

  <p>
    <strong>Name:</strong>
    <%= @pizza.name %>
  </p>

  <p>
    <strong>Toppings:</strong>
    <%= @pizza.toppings.map(&:name).join(", ") %>
  </p>

  <div class="mt-3">
    <%= link_to "Edit", edit_pizza_path(@pizza), class: "btn btn-warning" %>

    <%= link_to "Back", pizzas_path, class: "btn btn-secondary" %>

    <%= button_to "Delete", @pizza, 
      method: :delete, 
      data: { turbo_confirm: "Are you sure you want to delete this pizza?" }, 
      class: "btn btn-danger",
      form: { style: "display: inline;" }
    %>
  </div>
</div>
