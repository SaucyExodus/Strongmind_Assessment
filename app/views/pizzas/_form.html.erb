<%= form_with(model: pizza, class: "card p-4 shadow-sm") do |form| %>
  <% if pizza.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(pizza.errors.count, "error") %> prevented this pizza from being saved:</h2>
      <ul>
        <% pizza.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <!-- Toppings Field -->
  <div class="mb-3">
    <%= form.label :toppings, class: "form-label" %><br>
    <%= form.collection_check_boxes(:topping_ids, Topping.all, :id, :name) do |b| %>
      <div class="form-check form-check-inline">
        <%= b.check_box(class: "form-check-input") %>
        <%= b.label(class: "form-check-label") %>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-end">
    <%= form.submit "Save Pizza", class: "btn btn-success" %>
  </div>
<% end %>
